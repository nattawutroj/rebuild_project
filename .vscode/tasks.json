{
  "version": "2.0.0",
  "command": "pnpm",
  "tasks": [
    {
      "label": "start-dev-server",
      "args": ["dev"],
      "isBackground": true,
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE v",
          "endsPattern": "Local:"
        },
        "pattern": {
          "regexp": ""
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "terminate-all-tasks",
      "command": "echo ${input:terminate}",
      "type": "shell",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ]
}
